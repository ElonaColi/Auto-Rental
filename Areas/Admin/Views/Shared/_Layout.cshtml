<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
   
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 250px;
            background: linear-gradient(180deg, #2c3e50 0%, #1a252f 100%);
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
        }

        .admin-content {
            flex: 1;
            padding: 20px;
            background: #f8f9fa;
            margin-left: 250px;
            min-height: 100vh;
        }

        .sidebar-brand {
            padding: 20px;
            border-bottom: 1px solid #34495e;
            background: #1a252f;
        }

            .sidebar-brand h4 {
                color: #1abc9c;
                font-weight: 600;
                margin: 0;
            }

        .nav-link {
            color: #bdc3c7 !important;
            padding: 15px 20px !important;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            font-weight: 500;
        }

            .nav-link:hover {
                background: #34495e;
                color: #1abc9c !important;
                border-left: 3px solid #1abc9c;
            }

            .nav-link.active {
                background: #34495e;
                color: #1abc9c !important;
                border-left: 3px solid #1abc9c;
                font-weight: 600;
            }

  
        .card {
            border-radius: 12px;
            border: none;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
            }

 
        .border-left-primary {
            border-left: 4px solid #4e73df !important;
        }

        .border-left-success {
            border-left: 4px solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 4px solid #36b9cc !important;
        }

        .border-left-warning {
            border-left: 4px solid #f6c23e !important;
        }

        .border-left-danger {
            border-left: 4px solid #e74a3b !important;
        }

   
        .shadow {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
        }

    
        .progress {
            height: 0.5rem;
            border-radius: 0.25rem;
            background-color: #eaecf4;
        }

        .progress-sm {
            height: 0.5rem;
        }

        .progress-bar {
            border-radius: 0.25rem;
        }

        .text-gray-800 {
            color: #5a5c69 !important;
        }

        .text-gray-300 {
            color: #dddfeb !important;
        }

  
        .btn-block {
            display: block;
            width: 100%;
        }


        .list-group-item {
            border: 1px solid #e3e6f0;
            padding: 1rem 1.25rem;
            background-color: #fff;
        }

        .mb-4 {
            margin-bottom: 1.5rem !important;
        }

        .mt-2 {
            margin-top: 0.5rem !important;
        }

        .mr-2 {
            margin-right: 0.5rem !important;
        }

        .mr-3 {
            margin-right: 1rem !important;
        }

        .d-flex {
            display: flex !important;
        }

        .justify-content-between {
            justify-content: space-between !important;
        }

        .align-items-center {
            align-items: center !important;
        }

  
        .text-uppercase {
            text-transform: uppercase !important;
        }

        .fade-in-animation {
            animation: fadeInKeyframe 0.5s ease-out;
        }

        .spinner-animation {
            animation: spinnerKeyframe 0.75s linear infinite;
        }

        @@keyframes fadeInKeyframe {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes spinnerKeyframe {
            to {
                transform: rotate(360deg);
            }
        }


        .card {
            animation: fadeInKeyframe 0.5s ease-out;
        }

 
        .spinner-border {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            vertical-align: text-bottom;
            border: 0.2em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: spinnerKeyframe 0.75s linear infinite;
        }

 
        @@media (max-width: 768px) {
            .admin-sidebar {
                width: 100%;
                height: auto;
                position: relative;
                margin-left: 0;
            }

            .admin-content {
                margin-left: 0;
                padding: 15px;
            }

            .admin-wrapper {
                flex-direction: column;
            }

            .h3 {
                font-size: 1.5rem;
            }

            .h5 {
                font-size: 1.25rem;
            }

            .card-body {
                padding: 1rem;
            }

            .sidebar-brand {
                padding: 15px;
            }

            .nav-link {
                padding: 10px 15px !important;
            }
        }

        @@media (max-width: 576px) {
            .col-6 {
                width: 50% !important;
            }

            .btn-sm {
                padding: 0.25rem 0.5rem;
                font-size: 0.75rem;
            }

            .card-body {
                padding: 0.75rem;
            }
        }

        .admin-sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .admin-sidebar::-webkit-scrollbar-track {
            background: #1a252f;
        }

        .admin-sidebar::-webkit-scrollbar-thumb {
            background: #34495e;
            border-radius: 3px;
        }

            .admin-sidebar::-webkit-scrollbar-thumb:hover {
                background: #1abc9c;
            }

    </style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar">
            <div class="sidebar-brand">
                <h4>Auto Rental Admin</h4>
            </div>
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                   href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rentals" ? "active" : "")"
                   href="@Url.Action("Index", "Rentals", new { area = "Admin" })">
                    <i class="fas fa-clipboard-list me-2"></i> Manage Rentals
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cars" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                   href="@Url.Action("Index", "Cars", new { area = "Admin" })">
                    <i class="fas fa-car me-2"></i> Manage Cars
                </a>
               
                <a class="nav-link" href="/Customers">
                    <i class="fas fa-users me-2"></i> Manage Customers
                </a>

                <form asp-area=""
                      asp-controller="Account"
                      asp-action="Logout"
                      method="post"
                      class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-light w-100 d-flex align-items-center">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </button>
                </form>

            </nav>
        </div>

        <div class="admin-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });

        $(document).ready(function() {
            var currentUrl = window.location.pathname;
            $('.nav-link').each(function() {
                var linkUrl = $(this).attr('href');
                if (currentUrl === linkUrl ||
                    (linkUrl !== '/' && currentUrl.startsWith(linkUrl))) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>