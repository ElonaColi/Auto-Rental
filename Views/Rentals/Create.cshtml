@model Auto_Rental.Models.Rental
@{
    ViewData["Title"] = "Create Rental";
    Layout = "_Layout";
}

<h1>Create Rental</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CarId"></label>
        <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId">
            <option value="">-- Select Car --</option>
        </select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}