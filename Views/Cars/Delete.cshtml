@model Auto_Rental.Models.Car
@{
    ViewData["Title"] = "Car Details";
    Layout = "_Layout";
}

<h1>Car Details</h1>

<dl class="row">
    <dt class="col-sm-2">Brand</dt>
    <dd class="col-sm-10">@Model.Brand</dd>

    <dt class="col-sm-2">Model</dt>
    <dd class="col-sm-10">@Model.Model</dd>

    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>

    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@Model.IsActive</dd>
</dl>

<p>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this car?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

</p>
