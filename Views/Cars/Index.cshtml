@model IEnumerable<Auto_Rental.Models.Car>

@{
    ViewData["Title"] = "Available Cars";
}

<h2 class="mb-4">Available Cars</h2>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Search by Brand, Model or Year..." />
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
</form>
@if (ViewBag.NoResults)
{
    <div class="alert alert-warning text-center">
        No cars found for "@ViewData["CurrentFilter"]"
    </div>
}

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm car-card">
                <div class="position-relative">
                    <img src="@car.ImageUrl ?? " /images/default-car.jpg""
                         class="card-img-top"
                         style="height:200px; object-fit:cover;" />

                    <span class="badge bg-success position-absolute top-0 start-0 m-2">
                        @car.PricePerDay.ToString("C") / day
                    </span>
                    <span class="badge bg-info text-dark position-absolute top-0 end-0 m-2">
                        @car.Location
                    </span>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text mb-1">
                        <strong>Year:</strong> @car.Year<br />
                        <strong>Fuel:</strong> @car.FuelType
                    </p>
                    @if (!string.IsNullOrEmpty(car.Description))
                    {
                        <p class="card-text text-muted small">@car.Description</p>
                    }

                    <div class="mt-auto">
                        <a asp-action="Details"
                           asp-route-id="@car.Id"
                           class="btn btn-primary w-100 mb-2">
                            View Details
                        </a>
                        <a href="#" class="btn btn-outline-success w-100">
                            Rent Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@ViewData["CurrentFilter"]">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}

<style>
    .car-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .car-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }

    .card-img-top {
        border-top-left-radius: .25rem;
        border-top-right-radius: .25rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.6em;
    }

    .btn {
        font-weight: 500;
    }
</style>

